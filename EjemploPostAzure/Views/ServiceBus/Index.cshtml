@model List<String>

    <h1 style="text-align: center; color: #c0392b; font-family: 'Arial', sans-serif; font-weight: bold;">
        Azure Service Bus
    </h1>

    <hr style="border: 2px solid #2980b9; width: 80%; margin: 0 auto;" />

    <div style="max-width: 600px; margin: 20px auto; background-color: #3498db; padding: 20px; border-radius: 20px; box-shadow: 0px 6px 15px rgba(0,0,0,0.4);">
        <form method="post" style="text-align: center;">
            <label style="font-size: 18px; font-weight: bold; color: #ecf0f1;">Escribe tu mensaje:</label>
            <textarea name="mensaje" class="form-control" style="width: 100%; height: 120px; margin-top: 10px; border: 2px solid #bdc3c7; border-radius: 10px; padding: 10px; font-size: 16px; color: #2c3e50;"></textarea>
            <br />
            <div style="display: flex; justify-content: space-between; margin-top: 15px;">
                <button type="submit" class="btn btn-danger" name="accion" value="enviar" style="width: 48%; background-color: #e74c3c; border: none; padding: 12px; border-radius: 10px; font-size: 18px; font-weight: bold; color: #ecf0f1;">
                    Enviar Mensaje
                </button>
                <button type="submit" class="btn btn-info" name="accion" value="recibir" style="width: 48%; background-color: #2980b9; border: none; padding: 12px; border-radius: 10px; font-size: 18px; font-weight: bold; color: #ecf0f1;">
                    Recibir Mensajes
                </button>
            </div>
        </form>
    </div>

    <hr style="border: 2px solid #2980b9; width: 80%; margin: 20px auto;" />

    @if (Model != null && Model.Count > 0)
{
    <div style="max-width: 600px; margin: 20px auto; background-color: #2c3e50; padding: 20px; border-radius: 20px; box-shadow: 0px 6px 15px rgba(0,0,0,0.4);">
        <h3 style="color: #ecf0f1; font-weight: bold; text-align: center;">Mensajes Recibidos:</h3>
        <ul class="list-group" style="list-style: none; padding: 0;">
            @foreach (string msj in Model)
            {
            <li class="list-group-item" style="background-color: #e67e22; margin: 5px 0; border-radius: 10px; padding: 10px; color: #1a1a1a; font-weight: bold;">
                @msj
            </li>
            }
        </ul>
    </div>
}
else
{
    <p style="text-align: center; color: #bdc3c7; font-style: italic;">No hay mensajes para mostrar.</p>
}
